
@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- CONTENT -->

        <div class="row">

            <!-- LOGIN -->
            <div class="col-md-6 col-sm-6">

                <!-- login form -->
                <form action="@Url.Action("Login", "Home")" method="post" class="sky-form boxed">
                    <header>Привет, любитель Судоку!</header>

                    <fieldset>

                        <section>
                            <label class="input">
                                <i class="icon-append fa fa-envelope"></i>
                                <input required type="email" placeholder="Email" name="email">
                     
                            </label>
                        </section>

                        <section>
                            <label class="input">
                                <i class="icon-append fa fa-lock"></i>
                                <input required type="password" placeholder="Пароль" name="password">
                   
                            </label>
                            
                        </section>

                    </fieldset>
                    <footer>
                        <button type="submit" class="button">Войти</button>
                    </footer>
                </form>
                <!-- /login form -->

            </div>
            <!-- /LOGIN -->

            <!-- REGISTER -->
            <div class="col-md-6 col-sm-6">
                
                <!-- registration form -->
                <form action="@Url.Action("Registration", "Home")" method="post" class="sky-form boxed">
                    <header>Зарегистрируйся!</header>

                    <fieldset>
                        <section>
                            <label class="input">
                                <i class="icon-append fa fa-envelope"></i>
                                <input required type="email" placeholder="Email" name="email">
                    
                            </label>
                        </section>

                        <section>
                            <label class="input">
                                <i class="icon-append fa fa-lock"></i>
                                <input required type="password" placeholder="Пароль">
       
                            </label>
                        </section>

                        <section>
                            <label class="input">
                                <i class="icon-append fa fa-lock"></i>
                                <input required type="password" placeholder="Подтвердите пароль" name="password">
                                @*<b class="tooltip tooltip-bottom-right"></b>*@
                            </label>
                        </section>
                    </fieldset>

                    <fieldset>
                        <div class="row">
                            <section class="col col-md-6">
                                <label class="input">
                                    <input type="text" placeholder="Имя" name="name">
                                </label>
                            </section>                 
                        </div>

                    </fieldset>
                    <footer>
                        <button type="submit" class="button">Зарегистрироваться</button>
                    </footer>
                </form>
                <!-- /registration form -->

            </div>
            <!-- /REGISTER -->

        </div>


<!-- /CONTENT -->


